<div class="products" id="home">
  <h1>GM motos - CARRITO</h1>
    <a href="/views/products">Productos</a>
  <nav class="products__container">
    {{#each products}}
      <div class="product__card">
        <img src="/assets/{{this.product_id.thumbnail}}" alt="{{this.title}}" />
        <h2>{{this.product_id.title}}</h2>
        <h3>{{this.product_id.category}}</h3>
        <p>U$S{{this.product_id.price}}</p>
        <p>{{this.quantity}}</p> <button class="deleteProd" onclick="deleteToCart('{{this.product_id._id}}', '{{../cart_id}}')">-</button>
      </div>
    {{/each}}
  </nav>
  {{!-- <button id="purchaseButton">Comprar</button> --}}
  <button id="purchaseButton" data-cart-id="{{cart_id}}" data-purchaser-email="{{session.user.email}}">Comprar</button>

</div>
<script src="/product.js"></script>
<script src="/purchase.js"></script>